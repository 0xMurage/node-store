{
  "compileOnSave": false,
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "buildcache/tscompile",
    "outDir": "dist",
    "removeComments": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "sourceMap": false,
    "alwaysStrict": true,
    "allowJs": false,
    "lib": [
      "es2015",
      "es2018",
      "es2018.promise"
    ],
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "app/helpers/interfaces"
    ]
  },
  "exclude": [
    "node_modules/*",
    "dist/*",
    ".idea/*",
    ".git/*",
    ".storage/*"
  ]
}
